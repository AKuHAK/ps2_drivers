EE_BIN = basic_elf_loader.elf
EE_OBJS = basic_elf_loader.o
EE_LIBS = -lelf-loader -lps2_drivers -lpatches

EE_CFLAGS = -Os
EE_CFLAGS = -fdata-sections -ffunction-sections -flto
EE_LDFLAGS = -fdata-sections -ffunction-sections -flto -Wl,--gc-sections

# Linking with the generated library at root
EE_LDFLAGS += -L../../
EE_INCS += -I../../include

all: $(EE_BIN)

clean:
	rm -f $(EE_BIN) $(EE_OBJS)

run: $(EE_BIN)
	ps2client execee host:$(EE_BIN)

reset:
	ps2client reset

include $(PS2SDK)/samples/Makefile.pref
include $(PS2SDK)/samples/Makefile.eeglobal
